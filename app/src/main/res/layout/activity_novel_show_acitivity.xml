<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NovelShowAcitivity">
    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/novelpage"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/DoderBlue">
    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/past"
        android:text="上一章"
        android:background="@drawable/btn2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/next"
        android:text="下一章"
        android:background="@drawable/btn2"
        android:layout_toRightOf="@+id/past"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <SeekBar
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/next"
        android:id="@+id/zoom"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"

        android:maxHeight="3dp"
        android:minHeight="3dp"
        android:progressDrawable="@drawable/seek_bar_style2"
        android:thumb="@drawable/seek_bar_btn1"/>
    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/catalog"
        android:text="目录"
        android:background="@drawable/btn2"
        android:layout_toEndOf="@+id/zoom"
        android:layout_marginTop="10dp"
        />
        <ImageButton
            android:id="@+id/web_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/refresh"
            android:layout_toRightOf="@id/catalog"
            android:layout_marginTop="14dp"
            android:background="#00000000"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="280dp"
        android:background="@drawable/round2"
        android:id="@+id/AddBook"
        android:src="@mipmap/addtoshelf" />

</RelativeLayout>