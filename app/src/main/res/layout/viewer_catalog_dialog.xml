<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_deepblue"
    android:paddingBottom="30dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/catalog_header"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/catalog_basic_info"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/catalog_book_title"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="测试书籍"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/catalog_total_size"
                android:textSize="14sp"
                android:textColor="@color/text_gray"
                android:text="@string/novel_catalog_size"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:id="@+id/catalog_control">
            <Button
                android:id="@+id/catalog_refresh"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/ripple_btn_edging"
                android:text=" 刷新 "
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/catalog_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/catalog_header"
        android:listSelector="@android:color/transparent"
        android:divider="#00000000"
        android:dividerHeight="0dp"/>
</RelativeLayout>