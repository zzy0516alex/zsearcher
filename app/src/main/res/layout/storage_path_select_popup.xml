<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/current_path"
        android:ellipsize="middle"
        android:singleLine="true"
        android:layout_margin="15dp"
        android:text="当前：/storage/emulate/download/zsearcher"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内部存储"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:id="@+id/title_storage"
        android:layout_below="@+id/current_path"
        android:layout_marginStart="15dp" />
    <ProgressBar
        android:id="@+id/storage"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="6dp"
        android:layout_below="@+id/title_storage"
        android:max="100"
        android:progress="0"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:progressDrawable="@drawable/progressbar_blue">
    </ProgressBar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storage"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/storage_info">
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/storage_info"
            android:textSize="12sp"
            android:textColor="#DCDCDC"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#D3D3D3"
        android:layout_below="@id/storage_info"
        android:id="@+id/separator_for_storage"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/change_path"
        android:layout_below="@+id/separator_for_storage"
        android:background="@drawable/square_btn_white"
        android:text="更改"
        android:textColor="@color/DoderBlue"/>


</RelativeLayout>