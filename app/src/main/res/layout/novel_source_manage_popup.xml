<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="125dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/import_source"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_square_btn_white"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:src="@mipmap/import_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="导入书源"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/export_source"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_below="@id/import_source"
        android:background="@drawable/rounded_square_btn_white"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:src="@mipmap/export_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="导出书源"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/delete_select"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_below="@+id/export_source"
        android:orientation="horizontal"
        android:background="@drawable/rounded_square_btn_white"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/delete_select_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/delete_select_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除模式"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/check_source"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_below="@+id/delete_select"
        android:orientation="horizontal"
        android:background="@drawable/rounded_square_btn_white"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/check_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/check_source_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="校验书源"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
</RelativeLayout>