<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/novel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第100章 标题"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>
    <TextView
        android:id="@+id/novel_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_box"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="正文\n正文\n正文"
        android:lineSpacingMultiplier="1.3"
        android:textSize="18sp"
        android:textColor="@color/day_text"/>

    <Button
        android:id="@+id/novel_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/novel_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_deep_green"
        android:text="刷新章节"
        android:textSize="18sp"
        android:textColor="@color/white"/>


</RelativeLayout>